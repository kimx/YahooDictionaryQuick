{
  "name": "英文字典搜尋",
  "version": "1.4",
  "manifest_version": 2,
  "description": "將選取的文字快速貼到其他網站翻譯 e.g Yahoo",
  "permissions": [
    "tabs",
    "<all_urls>",
    "contextMenus"
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html",
    "default_title": "選取文字後，按右鍵會看到搜尋圖示"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "selection.js" ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "persistent": false,
    "scripts": [ "background.js" ]
  },
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon-128-1.png"
  }

}